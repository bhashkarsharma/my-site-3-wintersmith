doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
      meta(name='viewport', content='width=device-width, initial-scale=1.0, minimal-ui')
      title
        block title
          = locals.name
      if page && page.metadata.canonical
          link(rel='canonical', href=page.metadata.canonical)
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['main.css'].url)
      script(src=contents.js['jquery.min.js'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            a(href=locals.url)
          h1
            a(href=locals.url)= locals.name
          p.description= locals.description
    div#content
      div.content-wrap
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.links
            a(href='https://twitter.com/bhashkarsharma', class='icon fa-twitter')
            a(href='https://linkedin.com/in/bhashkarsharma', class='icon fa-linkedin')
            a(href='https://github.com/bhashkarsharma', class='icon fa-github')
            a(href='mailto:info@bhashkar.me', class='icon fa-envelope')
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
    include ga